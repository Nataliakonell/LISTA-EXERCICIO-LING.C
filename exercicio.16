#include <stdio.h>
#include <stdlib.h>

int main()
{

    int numero, x = 0, fatorial = 1;
    system("cls");

    printf("Me fale o numero que voce deseja calcular o fatorial: ");
    scanf("%d", &numero);

    x = numero;

    while (x > 1)
    {
        fatorial = fatorial * x;
        x -= 1;
    }

    printf("O resultado e: %d", fatorial);

    return 0;
}
